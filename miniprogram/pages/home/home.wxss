/* 首页容器 */
page {
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 顶部搜索栏 */
.home-header {
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 轮播图区域 */
.banner-section {
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.banner-swiper {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
}

.banner-item {
  width: 100%;
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

.banner-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
  background: rgba(0, 0, 0, 0.3);
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
}

/* 备用轮播图样式 */
.banner-placeholder {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 这行已经在上面定义了，删除重复 */

.banner-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.banner-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 快捷入口 */
.quick-menu {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
}

.category-emoji {
  font-size: 40rpx;
}

/* 推荐区域 */
.recommend-section {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  padding: 30rpx 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.book-list {
  padding: 30rpx;
}

.book-item {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.book-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.book-cover {
  width: 120rpx;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.book-emoji {
  font-size: 48rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.book-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.book-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

.book-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.book-rating,
.book-sales {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 4rpx;
}

/* 网格推荐区域 */
.recommend-grid-section {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.grid-books {
  display: flex;
  padding: 30rpx;
  gap: 30rpx;
}

.grid-book-item {
  flex: 1;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.grid-book-cover {
  width: 100%;
  height: 192rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.grid-book-title {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.grid-book-author {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.grid-book-price {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #ff4757;
}
