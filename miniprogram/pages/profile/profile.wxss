page {
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息头部 */
.profile-header {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  padding: 60rpx 30rpx 40rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-school {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 4rpx;
}

.user-phone {
  font-size: 20rpx;
  opacity: 0.7;
}

/* 订单统计 */
.order-stats {
  background: white;
  margin: -20rpx 30rpx 30rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.view-all {
  display: flex;
  align-items: center;
  color: #3b82f6;
  font-size: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-icon {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.stat-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单区域 */
.menu-sections {
  padding: 0 30rpx;
}

.menu-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

/* 商家申请卡片 */
.merchant-apply-section {
  margin-bottom: 30rpx;
}

.apply-card {
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  color: white;
}

.apply-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.apply-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.apply-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.apply-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 商家入口 */
.merchant-entrance {
  margin-bottom: 30rpx;
}
