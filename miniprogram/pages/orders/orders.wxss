page {
  background-color: #f5f5f5;
  height: 100vh;
}

.order-tabs {
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.orders-container {
  height: calc(100vh - 88rpx - 96rpx);
  padding: 20rpx 30rpx 40rpx;
}

/* 订单项 */
.order-item {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.merchant-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.order-status.pending {
  background: #fef3c7;
  color: #d97706;
}

.order-status.shipping {
  background: #dbeafe;
  color: #2563eb;
}

.order-status.receiving {
  background: #d1fae5;
  color: #059669;
}

.order-status.completed {
  background: #e5e7eb;
  color: #6b7280;
}

.order-status.review {
  background: #fce7f3;
  color: #be185d;
}

/* 商品列表 */
.order-products {
  padding: 0 30rpx;
}

.product-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.book-emoji {
  font-size: 48rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff4757;
}

.product-quantity {
  font-size: 24rpx;
  color: #666;
}

/* 订单底部 */
.order-footer {
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-total {
  font-size: 24rpx;
  color: #333;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

/* 空状态 */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 100rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}
