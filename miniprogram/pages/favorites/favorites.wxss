page {
  background-color: #f5f5f5;
  height: 100vh;
}

/* 收藏页面容器 */
.favorites-container {
  height: calc(100vh - 88rpx);
  background-color: #f5f5f5;
}

/* 未登录引导界面 */
.login-guide {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 60rpx;
}

.guide-content {
  text-align: center;
  width: 100%;
}

.guide-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.guide-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.guide-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.login-btn {
  margin-bottom: 40rpx;
  width: 400rpx;
}

.browse-tip {
  font-size: 26rpx;
  color: #999;
}

.browse-link {
  color: #3b82f6;
  margin-left: 10rpx;
  text-decoration: underline;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #666;
}

/* 收藏列表 */
.favorites-scroll {
  height: 100%;
  padding: 24rpx;
}

.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 收藏项目 */
.favorite-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.book-image {
  width: 120rpx;
  height: 160rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-img {
  width: 100%;
  height: 100%;
}

.book-emoji {
  font-size: 64rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.book-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.book-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.favorite-time {
  font-size: 24rpx;
  color: #999;
}

.favorite-actions {
  padding: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 0 60rpx;
}

.empty-content {
  text-align: center;
  width: 100%;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #666;
}

/* 没有更多 */
.no-more {
  padding: 40rpx;
}

.no-more-content {
  text-align: center;
}

.no-more-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  display: block;
}

.no-more-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.no-more-tip {
  font-size: 24rpx;
  color: #999;
  display: block;
}
