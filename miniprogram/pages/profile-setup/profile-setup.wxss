.profile-setup-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx 32rpx;
}

.setup-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.setup-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.setup-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.form-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 0;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding: 0;
  margin: 0;
}

.form-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333;
}

.form-picker .placeholder {
  color: #c0c4cc;
}

.button-container {
  margin-top: 60rpx;
}

.skip-button {
  text-align: center;
  padding: 32rpx 0;
  margin-top: 24rpx;
}

.skip-button text {
  font-size: 28rpx;
  color: #666;
  text-decoration: underline;
}

.tips {
  text-align: center;
  margin-top: 40rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}
