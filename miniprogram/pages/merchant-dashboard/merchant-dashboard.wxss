page {
  background-color: #f5f5f5;
  height: 100vh;
}

.nav-actions {
  padding: 0 30rpx;
}

.dashboard-container {
  height: calc(100vh - 88rpx);
  padding: 20rpx 30rpx 40rpx;
}

/* 店铺概览 */
.shop-overview {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shop-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.shop-details {
  flex: 1;
}

.shop-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.shop-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

/* 通用区块样式 */
.stats-section,
.quick-actions,
.pending-tasks,
.product-management,
.recent-orders {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 数据统计 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  text-align: center;
  position: relative;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #3b82f6;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-trend {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  font-size: 20rpx;
}

.stat-trend.up {
  color: #10b981;
}

.stat-trend.down {
  color: #ef4444;
}

/* 快捷操作 */
.action-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
}

/* 商品管理 */
.product-tabs {
  display: flex;
  margin-bottom: 30rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  background: white;
  color: #3b82f6;
  font-weight: 500;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #ff4757;
  color: white;
  font-size: 18rpx;
  min-width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  gap: 24rpx;
}

.product-image {
  width: 120rpx;
  height: 160rpx;
  background: white;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-emoji {
  font-size: 48rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
  margin-bottom: 12rpx;
}

.product-stats {
  display: flex;
  gap: 24rpx;
}

.product-sales,
.product-stock {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-products {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 最近订单 */
.view-all {
  display: flex;
  align-items: center;
  color: #3b82f6;
  font-size: 24rpx;
  gap: 8rpx;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  gap: 24rpx;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.order-number {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-products {
  flex: 2;
  display: flex;
  flex-direction: column;
}

.product-names {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff4757;
}

.order-status {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.order-status.pending {
  background: #fef3c7;
  color: #d97706;
}

.order-status.shipping {
  background: #dbeafe;
  color: #2563eb;
}

.order-status.completed {
  background: #d1fae5;
  color: #059669;
}
