page {
  background-color: #f5f5f5;
  height: 100vh;
}

.nav-actions {
  padding: 0 30rpx;
}

.dashboard-container {
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 店铺概览 */
.shop-overview {
  margin: 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.shop-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.shop-details {
  flex: 1;
}

.shop-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.shop-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

/* 通用区块样式 */
.stats-section,
.quick-actions,
.pending-tasks,
.product-management,
.recent-orders {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 数据统计 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #0052d9;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

.stat-trend {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 22rpx;
}

.stat-trend.up {
  color: #00a870;
}

.stat-trend.down {
  color: #e34d59;
}

/* 快捷操作 */
.quick-actions {
  margin: 20rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 商品管理 */
.product-management {
  margin: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-actions {
  /* 空 */
}

.product-tabs {
  display: flex;
  background: white;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  position: relative;
  background: white;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: #0052d9;
  background: #f3f6ff;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 20rpx;
  background: #e34d59;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 20rpx;
  height: 28rpx;
  line-height: 20rpx;
  text-align: center;
}

.product-list {
  background: white;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.product-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.product-emoji {
  font-size: 48rpx;
}

.product-info {
  flex: 1;
}

.product-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #e34d59;
  display: block;
  margin-bottom: 8rpx;
}

.product-stats {
  display: flex;
  gap: 20rpx;
}

.product-sales,
.product-stock {
  font-size: 24rpx;
  color: #999;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 空状态 */
.empty-products {
  background: white;
  padding: 100rpx 40rpx;
  text-align: center;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

/* 最近订单 */
.recent-orders {
  margin: 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.recent-orders .section-title {
  padding: 30rpx 30rpx 0;
  margin-bottom: 20rpx;
}

.view-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #0052d9;
}

.order-list {
  padding-bottom: 10rpx;
}

.order-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-number {
  font-size: 26rpx;
  color: #666;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-products {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.product-names {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #e34d59;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  text-align: center;
  width: fit-content;
}

.order-status.shipping {
  background: #fff3e0;
  color: #ed7b2f;
}

.order-status.completed {
  background: #e8f5e8;
  color: #00a870;
}

/* 商品模态框样式 */
.product-modal {
  max-height: 80vh;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-content {
  max-height: 60vh;
  padding: 30rpx;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 图片上传区域样式 */
.image-upload-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.uploaded-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  color: #999;
  background: #fafafa;
}

.upload-icon {
  font-size: 48rpx;
  font-weight: 300;
}

.upload-text {
  font-size: 24rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}
