page {
  background-color: #f5f5f5;
  height: 100vh;
}

.nav-actions {
  padding: 0 30rpx;
}

.dashboard-container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 店铺概览 */
.shop-overview {
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.shop-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.shop-details {
  flex: 1;
}

.shop-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.shop-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

/* 通用区块样式 */
.stats-section,
.quick-actions,
.pending-tasks,
.product-management,
.recent-orders {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 数据统计 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 4rpx;
}

.stat-unit {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 快捷操作 */
.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.action-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 待处理事项 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.task-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.task-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #3b82f6;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.task-icon.urgent {
  background: #ef4444;
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.task-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.task-desc {
  font-size: 24rpx;
  color: #666;
}

.task-badge {
  margin-right: 16rpx;
}

/* 订单相关样式 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-item {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-no {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  color: white;
}

.status-pending {
  background: #f59e0b;
}

.status-paid {
  background: #3b82f6;
}

.status-shipping {
  background: #10b981;
}

.status-completed {
  background: #6b7280;
}

.status-cancelled {
  background: #ef4444;
}

.order-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-products {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.order-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #ef4444;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-time {
  font-size: 24rpx;
  color: #666;
}

/* 商品相关样式 */
.product-tabs {
  display: flex;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.tab-item {
  padding: 16rpx 24rpx;
  margin-right: 32rpx;
  cursor: pointer;
  border-bottom: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #3b82f6;
  border-bottom-color: #3b82f6;
}

.tab-label {
  font-size: 28rpx;
  font-weight: 500;
}

.tab-count {
  font-size: 24rpx;
  margin-left: 8rpx;
  opacity: 0.7;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.product-icon {
  font-size: 40rpx;
}

.product-img {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.product-meta {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.product-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #ef4444;
}

.product-stock {
  font-size: 24rpx;
  color: #10b981;
}

.product-stock.stock-low {
  color: #ef4444;
  font-weight: 500;
}

.product-sales {
  font-size: 24rpx;
  color: #666;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 空状态 */
.empty-products {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 40rpx;
}

/* 模态框样式 */
.product-modal {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-content {
  flex: 1;
  max-height: 60vh;
  padding: 0 30rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

/* 图片上传样式 */
.image-upload-section {
  margin-bottom: 30rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-upload-btn {
  aspect-ratio: 1;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  gap: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #666;
}

.upload-tip {
  font-size: 20rpx;
  color: #999;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #e9ecef;
  gap: 20rpx;
}

/* 描述字段样式 */
.description-field {
  margin-top: 30rpx;
}

.field-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.description-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  box-sizing: border-box;
}

.description-textarea::placeholder {
  color: #999;
}
