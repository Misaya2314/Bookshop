page {
  background-color: #f5f5f5;
}

.user-info-container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: 200rpx;
}

/* 头像设置区域 */
.avatar-section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.avatar-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.avatar-content {
  padding: 48rpx 32rpx;
  display: flex;
  justify-content: center;
}

.avatar-wrapper {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f8f9fa;
  border: 4rpx solid #e9ecef;
}

.avatar-container {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.default-avatar {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
}

.avatar-emoji {
  font-size: 80rpx;
  color: #ffffff;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 50%;
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.avatar-tip {
  font-size: 20rpx;
  color: #ffffff;
  margin-top: 8rpx;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.form-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-container {
  padding: 0;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 120rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding: 0;
  margin: 0;
  background: transparent;
}

.form-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #333;
  padding: 16rpx 0;
}

.form-picker .placeholder {
  color: #c0c4cc;
}

/* 按钮区域 */
.button-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.button-group {
  display: flex;
  gap: 24rpx;
}

.reset-btn {
  flex: 1;
}

.save-btn {
  flex: 2;
}

/* 提示区域 */
.tips-section {
  margin-top: 32rpx;
}

.tips-content {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #fffbeb;
  border-radius: 12rpx;
  border: 1rpx solid #fed7aa;
}

.tips-text {
  font-size: 24rpx;
  color: #92400e;
  margin-left: 12rpx;
  line-height: 1.5;
  flex: 1;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .avatar-wrapper {
    width: 160rpx;
    height: 160rpx;
  }

  .form-label {
    width: 140rpx;
    font-size: 28rpx;
  }

  .form-input,
  .form-picker {
    font-size: 28rpx;
  }
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
}
