page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100vh;
  padding: 120rpx 60rpx 80rpx;
  color: white;
}

/* 顶部Logo区域 */
.logo-section {
  text-align: center;
  padding-top: 100rpx;
}

.logo-icon {
  width: 200rpx;
  height: 200rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 60rpx;
  font-size: 96rpx;
  animation: float 3s ease-in-out infinite;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.app-title {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.app-subtitle {
  display: block;
  font-size: 32rpx;
  opacity: 0.8;
  font-weight: 300;
}

/* 中间欢迎区域 */
.welcome-section {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.welcome-title {
  display: block;
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.8;
  font-weight: 300;
}

/* 隐私政策同意区域 */
.privacy-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.privacy-checkbox-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 24rpx 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.privacy-checkbox-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transition: left 0.6s ease;
}

.privacy-checkbox-container:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 255, 255, 0.3);
}

.privacy-checkbox-container:active::before {
  left: 100%;
}

.custom-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.custom-checkbox.checked {
  background: rgba(135, 206, 235, 0.4);
  border-color: #87ceeb;
  box-shadow: 0 0 20rpx rgba(135, 206, 235, 0.3),
    inset 0 1rpx 3rpx rgba(135, 206, 235, 0.2);
  transform: scale(1.1);
}

.checkbox-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.5);
  animation: checkBounce 0.3s ease;
}

@keyframes checkBounce {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.privacy-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.5;
  color: rgba(255, 255, 255, 0.95);
  text-align: left;
}

.link {
  color: #87ceeb;
  text-decoration: underline;
  font-weight: 500;
  margin: 0 6rpx;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s ease;
}

.link:active {
  color: #b0e0e6;
  text-shadow: 0 0 8rpx rgba(176, 224, 230, 0.6);
}

/* 底部登录区域 */
.login-section {
  width: 100%;
}

.tips {
  text-align: center;
  margin-top: 24rpx;
  font-size: 24rpx;
  opacity: 0.8;
  color: #ffeb3b;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
  animation: tipsPulse 2s ease-in-out infinite;
}

@keyframes tipsPulse {
  0%,
  100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}
