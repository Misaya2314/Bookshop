<view class="login-container">
  <!-- 顶部Logo区域 -->
  <view class="logo-section">
    <view class="logo-icon">📚</view>
    <text class="app-title">学长二手书</text>
    <text class="app-subtitle">校园专业图书交易平台</text>
  </view>

  <!-- 中间欢迎区域 -->
  <view class="welcome-section">
    <text class="welcome-title">欢迎来到学长二手书</text>
    <text class="welcome-desc">连接校园买家与卖家\n让专业书籍流转更高效</text>
  </view>

  <!-- 隐私政策同意区域 -->
  <view class="privacy-section">
    <view class="privacy-checkbox-container" bindtap="toggleAgreement">
      <view class="custom-checkbox {{isAgreed ? 'checked' : ''}}">
        <text class="checkbox-icon" wx:if="{{isAgreed}}">✓</text>
      </view>
      <view class="privacy-text">
        <text>我已阅读并同意</text>
        <text class="link" catchtap="viewAgreement">《用户服务协议》</text>
        <text>和</text>
        <text class="link" catchtap="viewPrivacy">《隐私保护指引》</text>
      </view>
    </view>
  </view>

  <!-- 底部登录区域 -->
  <view class="login-section">
    <t-button 
      theme="primary" 
      size="large" 
      block
      bind:tap="wxLogin"
      loading="{{isLoading}}"
      disabled="{{!isAgreed || isLoading}}"
    >
      <t-icon name="wechat" size="40rpx" style="margin-right: 16rpx;" />
      微信授权登录
    </t-button>
    
    <view class="tips" wx:if="{{!isAgreed}}">
      <text>请先阅读并同意用户协议和隐私政策</text>
    </view>
  </view>
</view> 