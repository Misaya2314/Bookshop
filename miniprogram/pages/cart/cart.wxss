page {
  background-color: #f5f5f5;
  height: 100vh;
}

.edit-btn {
  padding: 0 30rpx;
  color: #3b82f6;
  font-size: 28rpx;
}

.cart-container {
  height: calc(100vh - 88rpx - 200rpx);
}

.cart-content {
  height: 100%;
  padding-bottom: 40rpx;
}

/* 商家分组 */
.merchant-group {
  background: white;
  margin: 16rpx 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.merchant-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 购物车商品 */
.cart-items {
  padding: 0 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 24rpx;
}

.book-emoji {
  font-size: 48rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-actions {
  display: flex;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 100rpx 60rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 100rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 30rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.footer-left {
  display: flex;
  align-items: center;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 16rpx;
}

.footer-right {
  text-align: right;
}

.total-label {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

.footer-actions {
  display: flex;
  gap: 24rpx;
}
