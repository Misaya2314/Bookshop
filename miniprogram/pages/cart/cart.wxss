page {
  background-color: #f5f5f5;
  height: 100vh;
  overflow: hidden;
}

.edit-btn {
  padding: 0 30rpx;
  color: #3b82f6;
  font-size: 28rpx;
}

/* 购物车容器 */
.cart-container {
  height: calc(100vh - 88rpx);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 未登录引导界面 */
.login-guide {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
}

.guide-content {
  text-align: center;
  width: 100%;
}

.guide-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.guide-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.guide-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.login-btn {
  margin-bottom: 40rpx;
  width: 400rpx;
}

.browse-tip {
  font-size: 26rpx;
  color: #999;
}

.browse-link {
  color: #3b82f6;
  margin-left: 10rpx;
  text-decoration: underline;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* 空购物车状态 */
.empty-cart {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
}

.empty-content {
  text-align: center;
  width: 100%;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.browse-btn {
  width: 400rpx;
}

/* 购物车内容 */
.cart-content {
  flex: 1;
  padding: 16rpx 16rpx 160rpx 16rpx; /* 底部增加操作栏的高度 */
  box-sizing: border-box;
}

/* 商家分组 */
.merchant-group {
  background: white;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.merchant-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 购物车商品 */
.cart-items {
  padding: 0 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 120rpx;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 24rpx;
  overflow: hidden;
}

.book-emoji {
  font-size: 48rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-actions {
  display: flex;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

/* 底部操作栏 */
.cart-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 30rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.footer-left {
  display: flex;
  align-items: center;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 16rpx;
}

.footer-right {
  text-align: right;
}

.total-label {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

.footer-actions {
  display: flex;
  gap: 24rpx;
}
