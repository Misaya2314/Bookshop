page {
  background-color: #f5f5f5;
  height: 100vh;
}

.navbar-left {
  display: flex;
  align-items: center;
  padding: 16rpx;
}

/* 订单标签页 */
.order-tabs {
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 订单容器 */
.orders-container {
  height: calc(100vh - 180rpx);
  padding: 0 30rpx;
}

.order-list {
  padding: 30rpx 0;
}

/* 订单项 */
.order-item {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.buyer-info {
  display: flex;
  align-items: center;
}

.buyer-name {
  margin-left: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff7ed;
  color: #ea580c;
}

.status-paid {
  background: #eff6ff;
  color: #2563eb;
}

.status-shipping {
  background: #f0f9ff;
  color: #0ea5e9;
}

.status-completed {
  background: #f0fdf4;
  color: #16a34a;
}

.status-cancelled {
  background: #fef2f2;
  color: #dc2626;
}

/* 商品列表 */
.order-products {
  margin-bottom: 24rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.book-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.book-emoji {
  font-size: 48rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单信息 */
.order-info {
  margin-bottom: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-detail {
  margin-bottom: 12rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 12rpx;
}

.buyer-contact {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.contact-label {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.contact-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.contact-phone {
  font-size: 22rpx;
  color: #666;
  padding: 4rpx 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
}

.delivery-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.delivery-label {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
  margin-right: 8rpx;
}

.delivery-address {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.order-address {
  font-size: 24rpx;
  color: #666;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-total {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  text-align: right;
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 16rpx;
}

/* 空状态 */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.6;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}
