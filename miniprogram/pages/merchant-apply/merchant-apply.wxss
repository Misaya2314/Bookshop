page {
  background-color: #f5f5f5;
  height: 100vh;
}

.apply-container {
  height: calc(100vh - 88rpx - 160rpx);
  padding-bottom: 40rpx;
}

/* 申请说明区域 */
.apply-intro {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
}

.intro-icon {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  font-size: 64rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.intro-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.intro-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
}

.benefits-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  justify-content: center;
}

/* 表单区域 */
.apply-form {
  padding: 0 30rpx;
}

.form-section {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.cell-value {
  color: #666;
  font-size: 28rpx;
}

/* 上传区域 */
.upload-section {
  padding: 30rpx;
}

.upload-item {
  margin-bottom: 30rpx;
}

.upload-item:last-child {
  margin-bottom: 0;
}

.upload-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.upload-area {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  color: #999;
  font-size: 24rpx;
}

.upload-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12rpx;
}

.tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #fef3c7;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #d97706;
}

/* 文本域区域 */
.textarea-wrapper {
  position: relative;
  padding: 30rpx;
}

.apply-desc {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 8rpx;
  background: #fafafa;
  font-size: 28rpx;
  line-height: 1.5;
}

.char-count {
  position: absolute;
  bottom: 40rpx;
  right: 50rpx;
  font-size: 22rpx;
  color: #999;
}

/* 协议区域 */
.agreement-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
}

.agreement-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.agreement-text {
  font-size: 26rpx;
  line-height: 1.5;
  color: #666;
}

.link {
  color: #3b82f6;
  text-decoration: underline;
}

/* 底部提交区域 */
.submit-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.submit-tips {
  text-align: center;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #999;
}
