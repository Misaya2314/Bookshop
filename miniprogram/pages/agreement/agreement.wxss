page {
  background-color: #f5f5f5;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 40rpx;
  color: white;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
}

.content {
  flex: 1;
  padding: 40rpx;
  background: white;
}

.section {
  margin-bottom: 48rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #667eea;
  padding-left: 16rpx;
}

.content-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 16rpx;
  text-align: justify;
}

.contact {
  display: block;
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
  margin-top: 16rpx;
}

.update-date {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 16rpx;
  font-style: italic;
}
