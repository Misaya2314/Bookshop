page {
  background-color: #f5f5f5;
  height: 100vh;
  padding: 0;
  margin: 0;
}

.category-container {
  display: flex;
  height: calc(100vh - 88rpx);
  margin-top: 88rpx;
}

/* 左侧分类栏 */
.category-sidebar {
  width: 200rpx;
  background: white;
  border-right: 1rpx solid #f0f0f0;
}

.sidebar-scroll {
  height: 100%;
}

.category-item {
  padding: 32rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f8f8f8;
  position: relative;
  transition: all 0.2s ease;
}

.category-item:hover {
  background: #f8f9ff;
}

.category-item.active {
  background: #f8f9ff;
  color: #3b82f6;
}

.category-item.active::after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 40rpx;
  background: #3b82f6;
}

.category-icon {
  font-size: 44rpx;
  margin-bottom: 12rpx;
  line-height: 1;
}

.category-name {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.2;
  word-break: break-all;
}

.category-item.active .category-name {
  color: #3b82f6;
  font-weight: 500;
}

/* 右侧内容区 */
.content-area {
  flex: 1;
  width: calc(100vw - 200rpx);
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  overflow: hidden;
}

.sub-category-tabs {
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  height: 100rpx;
  flex-shrink: 0;
}

.major-scroll {
  height: 100%;
  width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
}

.major-list {
  display: inline-flex;
  align-items: center;
  height: 100%;
  padding: 0 30rpx;
  min-width: max-content;
}

.major-item {
  flex-shrink: 0;
  padding: 20rpx 32rpx;
  margin-right: 24rpx;
  border-radius: 40rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 60rpx;
  box-sizing: border-box;
}

.major-item:last-child {
  margin-right: 30rpx;
}

.major-item.active {
  background: #3b82f6;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.major-name {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  line-height: 1;
  text-align: center;
}

.major-item.active .major-name {
  color: white;
  font-weight: 500;
}

.product-scroll {
  flex: 1;
  padding: 30rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  width: 100%;
}

.product-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 256rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.book-emoji {
  font-size: 64rpx;
}

.book-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.product-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-author {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff4757;
}

.product-sales {
  font-size: 20rpx;
  color: #999;
}

/* 加载状态样式 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 没有更多数据样式 */
.no-more {
  padding: 60rpx 0;
  text-align: center;
}

.no-more-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.no-more-icon {
  font-size: 64rpx;
  opacity: 0.6;
}

.no-more-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.no-more-tip {
  font-size: 24rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}
