<!-- 顶部标题栏 -->
<t-navbar title="分类" />

<view class="category-container">
  <!-- 左侧学院分类 -->
  <view class="category-sidebar">
    <scroll-view scroll-y class="sidebar-scroll">
      <view 
        class="category-item {{selectedCollege === item.id ? 'active' : ''}}"
        wx:for="{{colleges}}" 
        wx:key="id"
        bindtap="selectCollege"
        data-id="{{item.id}}"
      >
        <view class="category-icon">{{item.icon}}</view>
        <text class="category-name">{{item.name}}</text>
      </view>
    </scroll-view>
  </view>

  <!-- 右侧内容区 -->
  <view class="content-area">
    <!-- 专业分类标签 -->
    <view class="sub-category-tabs">
      <scroll-view 
        scroll-x="{{true}}" 
        class="major-scroll" 
        enable-flex="{{true}}"
        show-scrollbar="{{false}}"
        enhanced="{{true}}"
        bounces="{{false}}"
        scroll-with-animation="{{true}}"
        scroll-into-view="{{scrollIntoView}}"
      >
        <view class="major-list">
          <view 
            class="major-item {{selectedMajor === item.id ? 'active' : ''}}"
            wx:for="{{majors}}" 
            wx:key="id"
            bindtap="selectMajor"
            data-id="{{item.id}}"
            data-index="{{index}}"
            id="major-{{index}}"
          >
            <text class="major-name">{{item.name}}</text>
          </view>
        </view>
      </scroll-view>
    </view>

         <!-- 商品列表 -->
     <scroll-view 
       scroll-y 
       class="product-scroll"
       refresher-enabled="{{true}}"
       bind:refresherrefresh="onPullDownRefresh"
       refresher-triggered="{{refreshing}}"
     >
       <view class="product-grid">
        <view 
          class="product-item" 
          wx:for="{{books}}" 
          wx:key="_id"
          bindtap="goToDetail"
          data-id="{{item._id}}"
        >
          <view class="product-image">
            <image 
              wx:if="{{item.images && item.images.length > 0}}"
              src="{{item.images[0]}}" 
              class="book-image" 
              mode="aspectFill"
            />
            <text wx:else class="book-emoji">{{item.icon}}</text>
          </view>
          <text class="product-title">{{item.title}}</text>
          <text class="product-author">{{item.author}}</text>
          <view class="product-footer">
            <text class="product-price">¥{{item.price}}</text>
            <text class="product-sales">已售{{item.sales}}</text>
          </view>
        </view>
      </view>
      
      <!-- 加载状态 -->
      <view class="loading-more" wx:if="{{loading}}">
        <text>加载中...</text>
      </view>
      
      <!-- 没有更多数据 -->
      <view class="no-more" wx:if="{{!hasMore && books.length > 0}}">
        <view class="no-more-content">
          <text class="no-more-icon">📚</text>
          <text class="no-more-text">没有更多商品了</text>
          <text class="no-more-tip">已为您展示全部结果</text>
        </view>
      </view>
      
      <!-- 空状态 -->
      <view class="empty-state" wx:if="{{!loading && books.length === 0}}">
        <text>暂无商品</text>
      </view>
    </scroll-view>
  </view>
</view> 