page {
  background-color: #f5f5f5;
  height: 100vh;
}

.nav-actions {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.detail-container {
  height: calc(100vh - 88rpx - 160rpx);
  padding-bottom: 40rpx;
}

/* 商品图片轮播 */
.product-images {
  position: relative;
  background: white;
}

.image-item {
  width: 100%;
  height: 640rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-emoji {
  font-size: 160rpx;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 商品基本信息 */
.product-info {
  background: white;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.price-section {
  margin-bottom: 24rpx;
}

.current-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4757;
}

.original-price {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  gap: 16rpx;
}

.original-text {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.product-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.product-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

/* 通用区块样式 */
.product-params,
.seller-info,
.delivery-info,
.product-description,
.reviews-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.view-all {
  display: flex;
  align-items: center;
  color: #3b82f6;
  font-size: 24rpx;
  gap: 8rpx;
}

/* 卖家信息 */
.seller-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.seller-details {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.seller-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.seller-stats {
  display: flex;
  gap: 24rpx;
}

.seller-rating,
.seller-sales {
  font-size: 20rpx;
  color: #999;
}

/* 商品详情 */
.description-content {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 评价区域 */
.review-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.review-user {
  flex: 1;
  margin-left: 16rpx;
}

.user-name {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.review-time {
  display: block;
  font-size: 20rpx;
  color: #999;
}

.review-rating {
  display: flex;
  gap: 4rpx;
}

.review-content {
  font-size: 26rpx;
  line-height: 1.5;
  color: #333;
}

/* 底部操作栏 */
.product-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 30rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-icons {
  display: flex;
  gap: 32rpx;
}

.action-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.icon-label {
  font-size: 20rpx;
  color: #666;
}

.purchase-buttons {
  display: flex;
  flex: 1;
}
