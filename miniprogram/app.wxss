/**app.wxss**/

/* 全局字体设置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
    "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial,
    sans-serif;
  line-height: 1.6;
}

/* TDesign图标字体备用方案 */
.t-icon {
  font-family: "t-icon", -apple-system, BlinkMacSystemFont, sans-serif !important;
}

/* 解决TDesign字体加载失败的问题 */
@font-face {
  font-family: "t-icon";
  src: local("t-icon"),
    url("https://tdesign.gtimg.com/icon/0.3.2/fonts/t.woff2") format("woff2"),
    url("https://tdesign.gtimg.com/icon/0.3.2/fonts/t.woff") format("woff");
  font-display: swap; /* 字体交换策略，提高性能 */
}

/* 备用图标样式 - 当字体加载失败时使用 */
.t-icon::before {
  font-family: "t-icon", sans-serif;
}

/* 全局容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background: #3b82f6;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

.btn-secondary {
  background: #f3f4f6;
  color: #374151;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 通用布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

